#!/bin/sh
#
# dot
#
# `dot` handles installation, updates, things like that. Run it periodically
# to make sure you're on the latest and greatest.
export SH=$HOME/.dotfiles

# Set macOS defaults
$SH/macos/set-defaults.sh

# Install homebrew
$SH/homebrew/install.sh 2>&1

# Upgrade homebrew
echo "› brew update"
brew update

# Install software
echo "› $SH/script/install"
$SH/script/install
